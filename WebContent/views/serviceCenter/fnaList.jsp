                            <textarea class="adminReply" data-bno="<%= i %>"></textarea> <!-- Í¥ÄÎ¶¨Ïûê ÏûÖÎ†•Ïö© -->
                          </div>



                          <div class="btnContainer">
                            <button type="button" class="adminEnrollBtn" data-bno="<%= i %>">ÏûÖÎ†•ÌïòÍ∏∞</button>
                            <button type="button" class="adminDeleteBtn" data-bno="<%= i %>">ÏÇ≠Ï†úÌïòÍ∏∞</button>
